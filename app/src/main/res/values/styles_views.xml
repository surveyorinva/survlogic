<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--Input Fields-->
    <style name="InputField" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">@dimen/edit_text_padding_start</item>
        <item name="android:paddingEnd">@dimen/edit_text_padding_end</item>
        <item name="android:paddingTop">@dimen/edit_text_padding_top</item>
        <item name="android:paddingBottom">@dimen/edit_text_padding_bottom</item>

    </style>

    <style name="InputField.ProjectNewActivity">
        <item name="android:inputType">textCapWords</item>

    </style>

    <style name="InputField.ProjectNewActivity.ProjectName">
        <item name="android:inputType">textAutoCorrect|textCapSentences</item>

    </style>

    <style name="InputField.DetailText">
        <item name="android:textSize">@dimen/text_size_location_value</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <!--Labels-->
    <style name="Labels">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:alpha">0.86</item>

    </style>

    <style name="Labels.EditBoxHeaders">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/header_text</item>
        <item name="android:textSize">@dimen/text_size_header</item>
    </style>

    <style name="Labels.NamedValues">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/primary_text</item>

    </style>

    <style name="Labels.Dialog">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>


    <style name="Labels.Card">


    </style>

    <style name="Labels.Card.Header">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/header_text</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Labels.Card.Details">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="Labels.Card.Footer">
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="Labels.Card.ProjectCategory">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Labels.Card.ProjectHeader">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Labels.Card.ProjectValues">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_detail_value</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Labels.Card.ProjectLocation">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_location_value</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Labels.Card.ProjectFooter">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!--Containers-->
    <!--Buttons-->
    <style name="Button.Flat" parent="Widget.AppCompat.Button.Borderless" />

    <style name="Button.Flat.Primary">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="Button.Flat.Primary.Save">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/button_ripple_green</item>

    </style>

    <style name="Button.Flat.Primary.Cancel">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/button_ripple_red</item>

    </style>

    <style name="Button.Flat.Transparent">



    </style>

    <style name="Button.Flat.Primary.BlueButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/button_ripple_blue</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Button.Flat.Primary.RedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/button_ripple_red</item>
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="Button.Special" parent="Widget.AppCompat.Button"/>

    <style name="Button.Special.GpsSurvey">
        <item name="android:background">@drawable/button_ripple_orange</item>
        <item name="android:textColor">@color/icons</item>

    </style>

    <style name="Button.Special.Card">
        <item name="background">@drawable/button_ripple_transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_header</item>
    </style>

    <style name="Button.Cards" parent="Widget.AppCompat.Button.Borderless">


    </style>

    <style name="Button.Cards.ActionEmphasis">
        <item name="android:textColor">@color/colorAccent</item>

    </style>

    <style name="Button.Cards.ActionSecondary">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!--Others-->

    <style name="CardDivider">
        <item name="android:background">@drawable/divider_horizontal_accent</item>

    </style>

    <style name = "LargeTextForScreen">

        <item name="android:textSize">@dimen/text_size_larger</item>

    </style>

    <style name = "MediumTextForScreen">

        <item name="android:textSize">@dimen/text_size_medium</item>

    </style>

</resources>