            android:inputType="textCapWords"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"/>

        <EditTextPreference
            android:key="@string/pref_key_current_job_attr_staff_rman"
            android:title="@string/pref_current_job_staff_rman"
            android:capitalize="words"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"/>

        <EditTextPreference
            android:key="@string/pref_key_current_job_attr_staff_other"
            android:title="@string/pref_current_job_staff_other"
            android:capitalize="words"
            android:inputType="textCapWords"
            android:maxLines="4"
            android:selectAllOnFocus="true"
            android:singleLine="false"/>

    </PreferenceCategory>


</PreferenceScreen>