<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_in_job_view"
            android:background="@drawable/box_border_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/button_back"
                    android:background="@drawable/ic_arrow_back"
                    android:layout_centerVertical="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/button_settings_left"
                    android:background="@drawable/ic_action_gear"
                    android:layout_centerVertical="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/DrawerLayout"
                    style="@style/Labels.Toolbar"
                    android:gravity="center_vertical"
                    android:layout_toEndOf="@id/button_back"
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/button_finish"
                    android:text="Finish"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    style="@style/Button.Flat.Transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/button_settings_right"
                    android:background="@drawable/ic_action_gear"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/ll_switch"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/switch_lbl_off"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />

                    <Switch
                        android:id="@+id/switch_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/switch_lbl_on"
                        android:textColor="@color/grey_800"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </RelativeLayout>




        </android.support.v7.widget.Toolbar>






    </android.support.design.widget.AppBarLayout>





</RelativeLayout>