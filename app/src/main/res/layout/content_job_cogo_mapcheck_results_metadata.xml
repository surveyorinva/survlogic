<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:weightSum="100"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="33"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/vc_rectangle_green"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:text="@string/cogo_mapcheck_results_closure_error"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/closure_error_direction"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/closure_error_distance"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <ImageView
        android:background="@color/gray"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="75dp" />

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="33"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/vc_rectangle_green"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:text="@string/cogo_mapcheck_results_distance_traveled"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/closure_distance_traveled"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:background="@color/gray"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="75dp" />

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="32"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/vc_rectangle_green"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:text="@string/cogo_mapcheck_results_area"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/closure_area_1"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/closure_area_2"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>