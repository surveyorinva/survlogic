<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/map_buttons_layout_1"
        android:layout_marginTop="10dp"
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/map_type_world_default"
            android:background="@drawable/map_type_hybrid"
            android:scaleType="fitXY"
            android:layout_weight="27"
            android:layout_width="0dp"
            android:layout_height="80dp" />

        <Space
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/map_type_world_aerial"
            android:background="@drawable/map_type_aerial"
            android:layout_weight="27"
            android:layout_width="0dp"
            android:layout_height="80dp" />

        <Space
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/map_type_world_topo"
            android:background="@drawable/map_type_topo"
            android:layout_weight="27"
            android:layout_width="0dp"
            android:layout_height="80dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/map_text_layout_1"
        android:layout_below="@id/map_buttons_layout_1"
        android:layout_marginTop="2dp"
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Default"
            android:textAlignment="center"
            android:layout_weight="27"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Space
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Satellite"
            android:textAlignment="center"
            android:layout_weight="27"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Space
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Terrain"
            android:textAlignment="center"
            android:layout_weight="27"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

</RelativeLayout>
