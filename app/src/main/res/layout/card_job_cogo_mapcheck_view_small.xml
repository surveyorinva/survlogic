<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:style="http://schemas.android.com/tools"
    android:id="@+id/card_project_job_view_small"
    android:clickable="true"
    android:focusable="false"
    android:elevation="0dp"
    android:layout_margin="3dp"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <RelativeLayout
        android:id="@+id/rl_layout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/stepNumber"
            android:text="##"
            android:background="@drawable/vc_circle_transparent"
            style="@style/Labels.Card.Header"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:padding="8dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/observation"
            android:text="@string/general_loading_status"
            style="@style/Labels.Card.Header"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/stepNumber"
            android:layout_toStartOf="@id/observation_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/observation_points"
            style="@style/Labels.Card.Details"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_below="@id/observation"
            android:layout_toEndOf="@id/stepNumber"
            android:layout_toStartOf="@id/observation_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/observation_type"
            android:layout_marginEnd="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="50dp" />


        <ImageButton
            android:id="@+id/options_menu"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_more_vert"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:scaleType="fitXY"
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </RelativeLayout>



</android.support.v7.widget.CardView>