<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:id="@+id/welcome_details"
        android:text="Tell the User something about This\nand the ask them to click the button"
        android:layout_centerInParent="true"
        android:textSize="15dp"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/welcome_header"
        android:text="WELCOME!"
        android:layout_centerInParent="true"
        android:layout_above="@id/welcome_details"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/nextScreen"
        android:text="Check Permissions"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/welcome_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>