<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="SideShot"
            style="@style/Labels.Card.ProjectCategory"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            app:cardCornerRadius="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/point_Number_action"
                    android:background="@drawable/vc_circle_blue"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Point No"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_normal"
                            android:layout_weight="30"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <Space
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:text="Target Height"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_normal"
                            android:layout_weight="40"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <Space
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <EditText
                            android:id="@+id/point_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="1dp"
                            android:layout_weight="30"
                            android:gravity="center"
                            android:hint="####"
                            android:nextFocusDown="@id/target_height"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="35" />


                        <EditText
                            android:id="@+id/target_height"
                            android:text="0.00"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="1dp"
                            android:layout_weight="20"
                            android:hint="ss.ss"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            app:cardCornerRadius="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/hAngle_action"
                    android:background="@drawable/vc_circle_green"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/hAngle_header"
                    android:text="HA"
                    android:textSize="18sp"
                    android:layout_toEndOf="@+id/hAngle_action"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/distance_action"
                    android:background="@drawable/vc_circle_green"
                    android:layout_below="@+id/hAngle_action"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/distance_header"
                    android:text="HD"
                    android:textSize="18sp"
                    android:layout_toEndOf="@+id/hAngle_action"
                    android:layout_alignTop="@+id/distance_action"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include
                        android:id="@+id/layout_ha_dms"
                        layout="@layout/content_job_cogo_sideshot_ha_dms"
                        android:visibility="visible"/>

                    <include
                        android:id="@+id/layout_ha_dec"
                        layout="@layout/content_job_cogo_sideshot_ha_dec"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/layout_hd"
                        layout="@layout/content_job_cogo_sideshot_hd"
                        android:visibility="visible"/>

                    <include
                        android:id="@+id/layout_sd_zenith"
                        layout="@layout/content_job_cogo_sideshot_sd_zenith"
                        android:visibility="gone"/>

                    <include
                        android:id="@+id/layout_sd_vertical_angle"
                        layout="@layout/content_job_cogo_sideshot_sd_vertical_angle"
                        android:visibility="gone"/>

                    <include
                        android:id="@+id/layout_sd_vertical_difference"
                        layout="@layout/content_job_cogo_sideshot_sd_vertical_difference"
                        android:visibility="gone"/>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/point_Description_action"
                    android:background="@drawable/vc_circle_blue"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Description"
                            android:gravity="start"
                            android:textSize="@dimen/text_size_normal"
                            android:layout_marginStart="4dp"
                            android:layout_weight="30"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="1dp"
                            android:layout_weight="90"
                            android:gravity="start"
                            android:hint="Add Description of Point"
                            android:inputType="textCapCharacters|textAutoCorrect"
                            android:textColor="@color/black"
                            android:textSize="16sp" />


                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/layout_area_footer"
            android:orientation="horizontal"
            android:weightSum="2.1"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <Button
                android:id="@+id/Save_button"
                android:text="@string/general_save"
                style="@style/Button.Flat.Primary.Save"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <Space
                android:layout_weight=".1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/Cancel_button"
                style="@style/Button.Flat.Primary.Cancel"
                android:text="@string/general_cancel"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>








    </LinearLayout>

</android.support.v4.widget.NestedScrollView>