<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/relLayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/card_1_header"
                style="@style/Labels.Card.ProjectCategory"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:text="@string/cogo_home_header_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:layout_gravity="end"
                android:text="More"
                style="@style/Button.Cards"
                android:visibility="gone"
                android:layout_width="65dp"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/content_cogo_home_page_1" />



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/card_2_header"
                style="@style/Labels.Card.ProjectCategory"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:text="@string/cogo_home_header_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:layout_gravity="end"
                android:text="More"
                style="@style/Button.Cards"
                android:visibility="gone"
                android:layout_width="65dp"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/content_cogo_home_page_2" />




        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/card_3_header"
                style="@style/Labels.Card.ProjectCategory"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:text="@string/cogo_home_header_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:layout_gravity="end"
                android:text="More"
                style="@style/Button.Cards"
                android:visibility="gone"
                android:layout_width="65dp"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/content_cogo_home_page_3" />


        </android.support.v7.widget.CardView>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>